{
  "name": "glob-runner",
  "version": "1.0.6",
  "description": "Tiny helper to search and exec js files by glob pattern with optional Node.js version restrictions",
  "main": "target/es6/index.js",
  "type": "module",
  "exports": {
    ".": "./target/es6/index.js"
  },
  "bin": {
    "glob-runner": "./target/es6/run.js"
  },
  "types": "index.d.ts",
  "typescript": {
    "definition": "index.d.ts"
  },
  "scripts": {
    "lint": "eslint src/**/*.{cjs,mjs,js}",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.{cjs,mjs,js}\"",
    "test:unit": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-modules\" npx jest",
    "test:it": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-modules\" node src/main/js/run.js src/test/**/*.it.js",
    "test": "yarn lint && yarn test:unit",
    "build:es6": "cpy src/main/js/ target/es6/",
    "build": "yarn build:es6 && yarn docs",
    "docs": "cpy ./README.md ./docs/README.md"
  },
  "prettier": "prettier-config-qiwi",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "index.d.ts",
    "buildstamp.json"
  ],
  "keywords": [
    "glob",
    "exec",
    "run"
  ],
  "author": "Anton Golub <antongolub@antongolub.com>",
  "license": "MIT",
  "dependencies": {
    "globby": "^13.0.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^27.2.5",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-qiwi": "^1.13.7",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "prettier-config-qiwi": "^1.4.3"
  },
  "resolutions": {
    "**/globby/fast-glob": "^3.2.7",
    "**/glob-parent": "^6.0.2"
  }
}
